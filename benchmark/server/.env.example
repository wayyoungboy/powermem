# =============================================================================
# PowerMem Benchmark Server Configuration
# =============================================================================
# Copy this file to .env and modify the values according to your needs
# =============================================================================

# =============================================================================
# OpenAI Configuration
# =============================================================================
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=your_openai_api_key_here

# LLM Model Configuration
LLM_MODEL=gpt-4o
LLM_TEMPERATURE=0.2

# =============================================================================
# Embedding Model Configuration
# =============================================================================
# Embedder can use a different API key than LLM (optional)
# If EMBEDDER_API_KEY is not set, it will use OPENAI_API_KEY as fallback
EMBEDDER_MODEL_BASE_URL=https://api.openai.com/v1
EMBEDDER_API_KEY=your_embedder_api_key_here
EMBEDDER_MODEL=text-embedding-3-small
EMBEDDER_DIMS=1536

# =============================================================================
# Database Configuration
# =============================================================================
# Database type: "oceanbase" or "postgres"
DB_TYPE=oceanbase

# Vector search weights (0.0 to 1.0)
VECTOR_WEIGHT=0.5
FTS_WEIGHT=0.5

# OceanBase Configuration (used when DB_TYPE=oceanbase)
OCEANBASE_HOST=127.0.0.1
OCEANBASE_PORT=2881
OCEANBASE_USER=root
OCEANBASE_PASSWORD=your_password_here
OCEANBASE_DB_NAME=ai_work
OCEANBASE_COLLECTION_NAME=powermem_collection
OCEANBASE_EMBEDDING_DIMS=1536
OCEANBASE_INDEX_TYPE=HNSW
OCEANBASE_VIDX_METRIC_TYPE=l2

# PostgreSQL Configuration (used when DB_TYPE=postgres)
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_DBNAME=ai_work
POSTGRES_COLLECTION_NAME=memories
POSTGRES_EMBEDDING_DIMS=1536
POSTGRES_DISKANN=true
POSTGRES_HNSW=true

# =============================================================================
# Application Configuration
# =============================================================================
HISTORY_DB_PATH=history.db
CONFIG_VERSION=v1.1

# =============================================================================
# Token Counting Configuration
# =============================================================================
# Enable token counting: "true" or "false"
TOKEN_COUNTING=true
